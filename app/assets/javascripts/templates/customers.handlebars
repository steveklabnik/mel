<h1>Customer Records</h1>

{{#link-to "customers.new" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" href="#"}}New Customer{{/link-to}}

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      {{ outlet }}
    </div><!-- /.modal-content -->
</form>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<table class="table table-striped table-hover">
  <thead>
   <tr><th>Name</th><th>Phone</th><th>What they want</th><th>Notes</th><th>Link</th></tr>
  </thead>
  <tbody>
  {{#each}}
    <tr>
      <td>{{name}}</td>
      <td>{{phone}}</td>
      <td>{{want}}</td>
      <td>{{notes}}</td>
      <td>{{#link-to "customer" this}}Link{{/link-to}}</td>
    </tr>
  {{else}}
    <tr><td>There are no customers.</td></tr>
  {{/each}}
  </tbody>
</table>
